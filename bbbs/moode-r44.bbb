sudo rm /usr/share/alsa/alsa.conf.d/equal.conf

sudo mkdir /var/run/mpd
sudo chown mpd:audio /var/run/mpd
sudo /usr/local/bin/mpd /etc/mpd.conf
mpc enable only 1
mpc update
sudo mpd --kill /etc/mpd.conf

